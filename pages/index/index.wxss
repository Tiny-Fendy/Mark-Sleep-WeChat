/**index.wxss**/
.header {
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    margin-bottom: 60rpx;
}

.header image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 4rpx solid #398738;
    margin: 16rpx 32rpx;
}

.body {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userInfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userInfo-nickname {
    color: #666;
}

.greeting {
    margin-top: 160rpx;
    color: #444;
}

.tips {
    font-size: 24rpx;
    color: #aaa;
}

.mark-time {
    width: 240rpx;
    height: 240rpx;
    margin: 48rpx 0;
    line-height: 240rpx;
    border-radius: 50%;
    font-size: 48rpx;
    color:#fff;
    background-image: radial-gradient(circle, #2ab70c, #6ddb61);
}

.mark-time.disabled {
    background-image: #2ab70c;
    //background-color: #2ab70c;
}
